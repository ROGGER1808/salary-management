                    </th>
                    <th >
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>

                            <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger btn-circle btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-success btn-circle btn-sm">
                                <i class="fas fa-info"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-primary btn-circle btn-sm">
                                <i class="fa fa-pen"></i>
                            </a>
                        </td>
                    </tr>
